<% # in app/views/movies/show.html.haml %>
<h3>Details about #{@movie.title}</h3>
<ul id="details">
  <li>
    Rating:
    <%= @movie.rating %>
  </li>
  <li>
    Released on:
    <%= @movie.release_date.strftime("%B %d, %Y") %>
  </li>
  <li>
    Director:
    <%= @movie.director %>
  </li>
</ul>
<h4>Description:</h4>
<p id="description">
  <%= @movie.description %>
</p>
<%= link_to 'Edit', edit_movie_path(@movie) %>
<%= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary' %>
<%= link_to 'Back to movie list', movies_path %>
<%= link_to 'Find Movies With Same Director', similar_movies_path(@movie) %>